<%- include("header", {title: title})  %> 
    <h1><%= title %></h1>

    <h2>Are you sure you want to delete this message?</h2>
    <div>
      <h3><%= message.title %></h2>
      <p><%= message.content %></p>

      <p>Author: <%= message.author.username %></p>
      <p>Date: <%= message.date %></p>
    </div>
    <form action="" method="post">
      <div>
        <input type="hidden" name="messageId" id="messageId" required value=<%- message._id %> >
      </div>
      <button type="submit">Delete Message</button>
    </form>
<%- include("footer", {title: title})  %> 
