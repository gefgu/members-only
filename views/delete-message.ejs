<%- include("header", {title: title})  %> 
<div class="py-4 px-8 xl:px-64 2xl:px-96">
    <h1 class="text-3xl my-4"><%= title %></h1>

    <h2 class="text-2xl my-4">Are you sure you want to delete this message?</h2>
    <div class="my-10">
      <h3 class="text-xl my-2 font-bold"><%= message.title %></h2>
        <% message.content.replaceAll("\r", "").split("\n").forEach(element => { %>
          <p class="my-4 leading-8"><%- element %></p>
        <% }) %>

      <div class="flex gap-6">
        <p><strong>Author:</strong> <%= message.author.username %></p>
        <p><strong>Date:</strong> <%= message.date %></p>
      </div>
    </div>
    <form action="" method="post">
      <div>
        <input type="hidden" name="messageId" id="messageId" required value=<%- message._id %> >
      </div>
      <button type="submit" class=" text-white border rounded p-2 px-4 bg-red-700 hover:bg-red-800 active:bg-red-900">Delete Message</button>
    </form>
  </div>
<%- include("footer", {title: title})  %> 
