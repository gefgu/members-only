<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a href="/sign-up">Sign up</a>
    <a href="/log-in">Log In</a>
    <% if (currentUser) { %>
    <a href="/log-out">Log Out</a>
    <a href="/new-message">Create New Message</a>
    <% } %> <% if (currentUser?.membershipStatus === "visitor") { %>
    <a href="/member">Become member</a>
    <% } %>
    <% if (currentUser?.membershipStatus === "member") { %>
      <a href="/admin">Become Admin</a>
      <% } %>
    <div>
      <% messages.forEach(message => { %>
      <div>
        <h2><%= message.title %></h2>
        <p><%= message.content %></p>
        <% if (currentUser?.membershipStatus === "member" || currentUser?.membershipStatus === "admin") { %>
        <p>Author: <%= message.author.username %></p>
        <p>Date: <%= message.date %></p>
        <% } %>
        <% if (currentUser?.membershipStatus === "admin") { %>
         <a href=<%- `/message/${message._id}/delete` %> >Delete Message</a>
        <% } %>
      </div>
      <% }) %>
    </div>
  </body>
</html>
