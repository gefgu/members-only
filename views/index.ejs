<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <a href="/sign-up">Sign up</a>
    <a href="/log-in">Log In</a>
    <% if (currentUser) { %>
    <a href="/new-message">Create New Message</a>
    <% } %>
    <div>
      <% messages.forEach(message => { %>
      <div>
        <h2><%= message.title %></h2>
        <p><%= message.content %></p>
      </div>
      <% }) %>
    </div>
  </body>
</html>
